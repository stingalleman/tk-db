datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Member {
  id           String   @id @default(cuid())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  ddId         String   @unique
  cabinet      Boolean
  cabinetTitle String?
  slug         String
  name         String
  firstName    String
  lastName     String
  seat         Int?
  profileUrl   String
  slogan       String?
  pictureUrl   String
  party        Party?   @relation(fields: [partyId], references: [id])
  partyId      String?
}

model Party {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ddId      String   @unique
  slug      String   @unique
  shorthand String   @unique
  name      String   @unique
  position  Int      @unique
  size      Int
  Members   Member[]
}
